= simple_form_for @pin, html: {multipart: true} do |f|
  - if @pin.errors.any?
    #errors
      %h2
      = plurallize(@pin.errors.count, "error")
      prevented this Pin from saving
      %ul
        - @pin.errors.full_messages.each do |msg|
          %li = msg

  .class
    = f.input :title, input_html: {class: ''}

    = f.input :description, input_html: {class: ''}

  =f.button :submit, class: ""
